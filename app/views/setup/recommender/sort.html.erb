<%= render :partial => 'setup/shared/buttons' %>
<p>
<%= button_to 'Finished', :action => 'list' %>
<div id="container" style="overflow: scroll; height: <%= (@option.disp_rows*2).to_s %>em">
 <ul id="recommenders"> 
  <% @recommenders.each do |s| %>
      <li id="recommender_<%=s.id%>"><%= s.name %></li>
