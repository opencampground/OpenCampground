<%= render :partial => 'setup/shared/buttons' %>
<p>
<%= button_to 'New season', :action => 'new' %>
<table border="1">
  <tr>
  <% for column in Season.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
  <% for season in @seasons %>
    <tr>
    <% for column in Season.content_columns %>
      <td><%=h season.send(column.name) %></td>
    <% end %>
    <td><%= link_to 'Edit', :action => 'edit', :id => season %></td>
    <% unless season.id == 1 %>
      <td><%= link_to 'Delete', { :action => 'destroy', :id => season },
				  :confirm => "Are you sure you want to delete #{season.name}?",
				  :method => 'post' %></td>
    <% end %>
    </tr>
  <% end %>
</table>
</p>
<%= button_to 'Finished', :controller => 'setup/index' %>
